---
import Speaker from "../ui/speaker.astro";

const speakers = [
  {
    pic: 'daniel-afonso.png',
    name: 'Daniel Afonso',
    bio: 'Developer Advocate @ OLX',
    talk: 'Em Breve',
    twitter: 'danieljcafonso',
    instagram: 'danieljcafonso',
    linkedin: 'https://www.linkedin.com/in/danieljcafonso/',
  }
];

const specialClass = [0, 3, 4, 7];
---

<section class="speakers">

 <h2 class="speakers-title">Palco.Production</h2>

  <div class="speakers-main">
    <div class="speakers-list">
      {speakers.map(({ pic, name, bio, talk, twitter, instagram, linkedin }, index) => (
        <div class="speakers-item">
          <Speaker
            pic={pic}
            name={name}
            bio={bio}
            talk={talk}
            twitter={twitter}
            instagram={instagram}
            linkedin={linkedin}
            specialClass={specialClass.includes(index) && 'alt'}
          />
        </div>
      ))}
    </div>
  </div>
</section>



<style lang="scss">
  .speakers {
    position: relative;
    background-color: var(--color-accent);
    padding: 13rem 0 10rem;

    @media (max-width: 600px) {
      padding: 9rem 0 2rem;
    }
  }

  .speakers-main {
    max-width: var(--wrapper-medium);
    width: 100%;
    margin: 0 auto;


     @media (max-width: 600px) {
      overflow: hidden;
    }
  }

  .speakers-title {
    font-size: 4rem;
    text-align: center;
    background-color: var(--color-primary);
    color: var(--color-secondary);
    padding: 1rem 0;
    margin-bottom: 6rem;
    text-transform: uppercase;


    @media (max-width: 600px) {
      font-size: 3rem;
    }
  }

  .speakers-list {
    padding-top: 5rem;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;

    @media (max-width: 600px) {
      display: block;
    }
  }


  .speakers-item {
    flex-basis: 48%;
    margin-bottom: 3rem;
  }







</style>
